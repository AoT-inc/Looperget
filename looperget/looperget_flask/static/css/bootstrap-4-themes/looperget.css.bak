/* 위젯 CSS */


/* PID 및 AoT 버튼 스타일 (일원화) */
.pause_pid, .hold_pid, .set_setpoint {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 2em;
  width: 3.2em;
  padding: 0 0.5em;
  font-size: 1em;
  border: none;
  border-radius: 0.3em;
  box-sizing: border-box;
  background-color: #F4D624; /* 기본 버튼 색상 (노란색) */
  color: #000;
  cursor: pointer;
  transition: background-color 0.3s;
}

.pause_pid:hover,
.hold_pid:hover,
.set_setpoint:hover {
  background-color: #929292;
}

.resume_pid {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 2em;
  width: 6.7em;
  padding: 0 0.5em;
  font-size: 1em;
  border: none;
  border-radius: 0.3em;
  box-sizing: border-box;
  background-color: #F4D624; /* 복귀 버튼 기본 색상 (노란색) */
  color: #000;
  cursor: pointer;
  transition: background-color 0.3s;
}

.resume_pid:hover {
  background-color: #929292;
}

/* 버튼 및 입력창 배치 */
.pid-button-row {
  display: flex;
  align-items: center;
  gap: 0.5em;
}

/* 토글 버튼 스타일 (신규 추가) */
.btn-toggle {
  position: relative;
  display: inline-block;
  width: 3.2em;
  height: 2em;
  vertical-align: middle;
  margin-top: 0.9em;
  margin-right: 0.5em;
}

.btn-toggle input {
  position: absolute !important;
  opacity: 0 !important;
  width: 0 !important;
  height: 0 !important;
  margin: 0 !important;
  padding: 0 !important;
  z-index: -1 !important;
}

.btn-toggle .slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #929292;
  transition: 0.3s;
  border-radius: 2em;
}

.btn-toggle .slider:before {
  position: absolute;
  content: "";
  height: 1.6em;
  width: 1.6em;
  left: 0.2em;
  bottom: 0.2em;
  background-color: #ffffff;
  border-radius: 50%;
  transition: 0.3s;
}

.btn-toggle input:checked + .slider {
  background-color: #F4D624;
}

.btn-toggle input:checked + .slider:before {
  transform: translateX(1.2em);
}

.aot-widget {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
  background-color: #E9E9E9; /* OFF=연분홍 */
  transition: background-color 0.3s;
}

.aot-widget-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}